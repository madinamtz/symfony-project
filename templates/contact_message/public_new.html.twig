<div id="footer-contact-form">
    <h3>Contactez-nous</h3>

    {% for message in app.flashes('success') %}
        <div class="flash-success">{{ message }}</div>
    {% endfor %}

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.nom, 'Nom') }}
            {{ form_widget(form.nom, { 'attr': {'id': 'contact-nom'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email, 'Email') }}
            {{ form_widget(form.email, { 'attr': {'id': 'contact-email'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.sujet, 'Sujet') }}
            {{ form_widget(form.sujet, { 'attr': {'id': 'contact-sujet'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.message, 'Message') }}
            {{ form_widget(form.message, { 'attr': {'id': 'contact-message'} }) }}
        </div>

        <button type="submit" id="contact-submit">Envoyer</button>
    {{ form_end(form) }}

    <div class="back-home">
        <a href="{{ path('app_home') }}">
            <button type="button" id="back-home-button">Retour Ã  l'accueil</button>
        </a>
    </div>
</div>
