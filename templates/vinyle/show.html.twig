{% extends 'base.html.twig' %}

{% block title %}{{ vinyle.vinyle }}{% endblock %}

{% block body %}
    <div class="vinyl-detail">
        <img
            src="{{ asset('images/vinyle' ~ vinyle.id ~ '.jpg') }}"
            alt="{{ vinyle.vinyle }}"
        >

        <h1>{{ vinyle.vinyle }}</h1>

        <p><strong>Artiste :</strong> {{ vinyle.artiste }}</p>
        <p><strong>Année :</strong> {{ vinyle.annee }}</p>
        <p><strong>Prix :</strong> {{ vinyle.prix }} €</p>

        <p class="vinyl-description">
            {{ vinyle.description }}
        </p>

        <a href="{{ path('app_home') }}" class="back-link">
            ← Retour à l'accueil
        </a>
    </div>
{% endblock %}
