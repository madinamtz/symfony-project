{# templates/contact_message/public_new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="contact-page">

    <h1>Contactez-nous</h1>

    {{ form_start(form, {'attr': {'class': 'contact-form'}}) }}

        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'placeholder': 'Votre nom'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'placeholder': 'Votre email'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
            {{ form_label(form.sujet) }}
            {{ form_widget(form.sujet, {'attr': {'placeholder': 'Sujet'}}) }}
            {{ form_errors(form.sujet) }}
        </div>

        <div class="form-group">
            {{ form_label(form.message) }}
            {{ form_widget(form.message, {'attr': {'placeholder': 'Votre message'}}) }}
            {{ form_errors(form.message) }}
        </div>

        <button type="submit">Envoyer</button>

    {{ form_end(form) }}

</div>
{% endblock %}
